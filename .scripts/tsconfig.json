{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "out",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "typeRoots": ["../node_modules/@types"],
    "types": ["node"]
  }
}
