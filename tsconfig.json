{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "out",
    "paths": {
      "*": ["node_modules/@wayward/types/definitions/*"],
      "@wayward/goodstream": ["node_modules/@wayward/goodstream/Stream"],
      "@wayward/goodstream/*": ["node_modules/@wayward/goodstream/*"]
    },
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "types": []
  },
  "include": ["src/**/*"]
}
